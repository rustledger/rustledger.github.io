{
    "compilerOptions": {
        "target": "ES2022",
        "module": "ESNext",
        "moduleResolution": "bundler",
        "strict": false,
        "allowJs": true,
        "checkJs": false,
        "noEmit": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "lib": ["ES2022", "DOM", "DOM.Iterable"]
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "dist"]
}
